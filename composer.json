{
  "name": "starisian/starmus-audio-recorder",
  "description": "Mobile-first, offline-friendly audio recorder for WordPress.",
  "version": "0.3.1",
  "type": "wordpress-plugin",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "Starisian\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Starisian Technology (Max Barrett)",
      "email": "support@starisian.com"
    }
  ],
  "homepage": "https://starisian.com",
  "support": {
    "issues": "https://github.com/Starisian-Technologies/starmus-audio-recorder/issues",
    "source": "https://github.com/Starisian-Technologies/starmus-audio-recorder"
  },
  "keywords": [
    "wordpress",
    "audio",
    "recorder",
    "plugin",
    "starmus",
    "MediaRecorder",
    "API",
    "webm",
    "opus"
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "php-stubs/wordpress-stubs": "^6.8",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "wp-coding-standards/wpcs": "^3",
    "phpunit/phpunit": "^9.6"
  },
  "config": {
    "platform": {
      "php": "8.0.30"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "lint:php": "vendor/bin/phpcs --standard=phpcs.xml.dist --extensions=php --report=full src templates",
    "fix:php": "vendor/bin/phpcbf --standard=phpcs.xml.dist --extensions=php src templates",
    "analyze:php": "vendor/bin/phpstan analyse --configuration=phpstan.neon",
    "test:php": "vendor/bin/phpunit --colors=always",
    "qa": [
      "@lint:php",
      "@analyze:php",
      "@test:php"
    ]
  }
}
