{
    "name": "starisian/starmus-audio-recorder",
    "description": "Mobile-first, offline-friendly audio recorder for WordPress.",
    "version": "0.3.1",
    "type": "wordpress-plugin",
    "license": "proprietary",
   "require": {
    "php": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "Starmus\\": "src/",
      "Starmus\\admin\\": "src/admin/",
      "Starmus\\frontend\\": "src/frontend/",
      "Starmus\\includes\\": "src/includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Starmus\\tests\\": "tests/"
    }
  },
    "authors": [
        {
            "name": "Starisian Technology (Max Barrett)",
            "email": "support@starisian.com"
        }
    ],
    "homepage": "https://starisian.com",
    "support": {
        "issues": "https://github.com/Starisian-Technologies/starmus-audio-recorder/issues",
        "source": "https://github.com/Starisian-Technologies/starmus-audio-recorder"
    },
    "keywords": [
        "wordpress",
        "audio",
        "recorder",
        "plugin",
        "starmus",
        "MediaRecorder",
        "API",
        "webm",
        "opus"
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/Starisian-Technologies/starmus-audio-recorder.git"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "php-stubs/wordpress-stubs": "^6.8",
        "phpstan/phpstan": "^2.1",
        "wp-coding-standards/wpcs": "^3",
        "squizlabs/php_codesniffer": "^3.13",
        "phpunit/phpunit": "^9.6",
        "yoast/phpunit-polyfills": "^1.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1",
        "phpstan/extension-installer": "^1.4",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1"
    },
    "config": {
        "platform": {
            "php": "8.0.30"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "lint:php": "vendor/bin/phpcs --standard=phpcs.xml.dist --extensions=php --report=full src",
        "fix:php": "vendor/bin/phpcbf --standard=phpcs.xml.dist --extensions=php src",
        "analyze:php": "vendor/bin/phpstan analyse --configuration=phpstan.neon.dist",
        "test:php": "vendor/bin/phpunit --colors=always"
    }
}
