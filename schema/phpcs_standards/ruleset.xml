<?xml version="1.0"?>
<ruleset name="MyProjectCustomStandard">
    <description>Custom standard for MyProject.</description>

    <!-- Include an existing standard as a base, e.g., PSR12 -->
    <rule ref="PSR12"/>

    <!-- Add a rule to check for STAR_ global variables -->
    <rule ref="MyProject.NamingConventions.GlobalVariablePrefix"/>

    <!-- Add a rule to check for starmus_ method names -->
    <rule ref="MyProject.NamingConventions.MethodNamePrefix"/>

    <!-- Define where to find your custom sniffs -->
    <config name="installed_paths" value="../../phpcs_standards/MyProject/Sniffs"/>

</ruleset>