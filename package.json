{
    "name": "starmus-audio-recorder",
    "version": "0.9.2",
    "description": "Mobile-first, offline-friendly audio recorder for WordPress.",
    "private": true,
    "type": "module",
    "main": "src/js/starmus-audio-recorder-module.js",
    "scripts": {
        "lint": "pnpm run lint:js && pnpm run lint:css && pnpm run lint:md",
        "lint:js": "eslint \"src/js/**/*.js\"",
        "lint:js:fix": "eslint \"src/js/**/*.js\" --fix",
        "lint:css": "stylelint \"src/css/**/*.css\"",
        "lint:css:fix": "stylelint \"src/css/**/*.css\" --fix",
        "lint:md": "markdownlint \"*.md\" \"src/**/*.md\" --ignore node_modules --ignore vendor --ignore .git",
        "lint:md:fix": "markdownlint \"*.md\" \"src/**/*.md\" --fix --ignore node_modules --ignore vendor --ignore .git",
        "security:audit": "pnpm audit --audit-level=moderate",
        "security:fix": "pnpm audit --fix",
        "format": "prettier --write \"src/**/*.{js,css,html,json}\"",
        "fix": "pnpm run lint:js:fix && pnpm run lint:css:fix && pnpm run format",
        "fix:all": "pnpm run fix && pnpm run lint:md:fix && pnpm run security:fix",
        "clean": "node -e \"require('fs').rmSync('assets', { recursive: true, force: true });\"",
        "build:vendor-legacy": "echo 'Vendor libs now bundled via rollup - this step is deprecated'",
        "build:css:main": "postcss src/css/starmus-audio-recorder-style.css -o assets/css/starmus-audio-recorder-styles.min.css",
        "build:css:prosody": "postcss src/css/starmus-prosody-engine.css -o assets/css/starmus-prosody-engine.min.css",
        "build:css:admin": "postcss src/css/starmus-admin.css -o assets/css/starmus-admin.min.css",
        "build:css:dashboard": "postcss src/css/starmus-dashboard.css -o assets/css/starmus-dashboard.min.css",
        "build:css:appmode": "postcss src/css/spparxstar-app-mode.css -o assets/css/sparxstar-app-mode.min.css",
        "build:css:consent": "postcss src/css/consent/starmus-consent.css -o assets/css/starmus-consent.min.css",
        "build:css": "pnpm run build:css:main && pnpm run build:css:prosody && pnpm run build:css:admin && pnpm run build:css:dashboard && pnpm run build:css:appmode && pnpm run build:css:consent",
        "build:js": "rollup -c roll-up.config.mjs",
        "build:hash": "node scripts/build-starmus.cjs assets/css/starmus-audio-recorder-styles.min.css assets/js/starmus-audio-recorder-script.bundle.min.js assets/css/starmus-prosody-engine.min.css assets/js/starmus-prosody-engine.min.js assets/css/starmus-admin.min.css assets/css/starmus-dashboard.min.css assets/css/sparxstar-app-mode.min.css assets/js/sparxstar-app-mode.min.js assets/css/starmus-consent.min.css assets/js/starmus-legal.min.js",
        "version:sync": "node scripts/sync-version.js",
        "build": "pnpm run clean && pnpm run build:css && pnpm run build:js && pnpm run build:hash && pnpm run version:sync",
        "i18n-check": "grep -r \"__('\" src/ || echo 'No i18n strings found'",
        "docs:js": "node bin/generate-js-docs.js",
        "docs:php": "php bin/generate-docs.php",
        "docs:unified": "bash bin/generate-unified-docs.sh",
        "docs": "pnpm run docs:unified",
        "test:e2e-setup": "./tests/e2e/setup-test-pages.sh",
        "test:e2e": "playwright test",
        "test:a11y": "playwright test --grep='WCAG'",
        "test:integration": "wp-env run tests-cli --env-cwd=wp-content/plugins/starmus-audio-recorder bash -c 'wp plugin activate starmus-audio-recorder && wp plugin list'",
        "test:wp-env": "pnpm run test:integration",
        "test": "pnpm run test:e2e && pnpm run test:a11y",
        "env:start": "wp-env start",
        "env:stop": "wp-env stop",
        "size-check": "size-limit",
        "validate": "node scripts/validate-build.cjs",
        "prebuild": "pnpm run validate"
    },
    "size-limit": [
        {
            "path": "assets/js/**/*.js",
            "limit": "100 KB"
        },
        {
            "path": "assets/css/**/*.css",
            "limit": "25 KB"
        }
    ],
    "author": "Starisian Technologies (Max Barrett)",
    "homepage": "https://starisian.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/Starisian-Technologies/starmus-audio-recorder.git"
    },
    "keywords": [
        "wordpress",
        "audio",
        "recorder",
        "plugin",
        "starmus",
        "MediaRecorder",
        "API",
        "webm",
        "opus"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "node": ">=18.17"
    },
    "packageManager": "pnpm@10.29.2",
    "devDependencies": {
        "@babel/core": "^7.29.0",
        "@babel/eslint-parser": "latest",
        "@babel/preset-env": "^7.29.0",
        "@eslint/js": "latest",
        "@microsoft/tsdoc": "latest",
        "@playwright/test": "latest",
        "@rollup/plugin-babel": "^6.1.0",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@size-limit/file": "latest",
        "@wordpress/env": "latest",
        "@wordpress/eslint-plugin": "latest",
        "axe-playwright": "latest",
        "cssnano": "latest",
        "eslint": "latest",
        "eslint-config-prettier": "latest",
        "eslint-plugin-jsdoc": "latest",
        "eslint-plugin-jsx-a11y": "latest",
        "eslint-plugin-perf-standard": "latest",
        "eslint-plugin-security": "latest",
        "globals": "latest",
        "jsdoc-to-markdown": "latest",
        "markdownlint-cli": "latest",
        "postcss": "latest",
        "postcss-cli": "latest",
        "prettier": "latest",
        "rollup": "^4.57.1",
        "size-limit": "latest",
        "stylelint": "latest",
        "stylelint-config-recess-order": "^7.6.1",
        "stylelint-config-standard": "latest",
        "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
        "stylelint-order": "^7.0.1",
        "stylelint-scss": "^6.14.0",
        "terser": "latest"
    },
    "dependencies": {
        "axios": "latest",
        "core-js": "^3.48.0",
        "konva": "latest",
        "peaks.js": "latest",
        "tus-js-client": "latest",
        "waveform-data": "latest"
    }
}
