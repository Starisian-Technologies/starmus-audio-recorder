{
  "name": "starmus-audio-recorder",
  "version": "0.3.1",
  "description": "Mobile-first, offline-friendly audio recorder for WordPress.",
  "type": "module",
  "main": "assets/js/starmus-audio-recorder-module.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md && npm run lint:php",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:js:fix": "eslint \"assets/js/**/*.js\" --fix",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:css:fix": "stylelint \"assets/css/**/*.css\" --fix",
    "lint:md": "markdownlint \"**/*.md\"",
    "lint:md:fix": "markdownlint \"**/*.md\" --fix",
    "lint:php": "vendor/bin/phpcs",
    "lint:php:fix": "vendor/bin/phpcbf",
    "format": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:md:fix && npm run lint:php:fix && prettier --write .",
    "build:hash": "node build-starmus.js",
    "build": "fs-extra copy node_modules/peaks.js/dist/peaks.min.js assets/js/vendor/peaks.min.js",
    "size-check": "bundlesize",
    "i18n-check": "grep -r '__(' src/ || echo 'No i18n strings found'",
    "docs:js": "mkdir -p docs && jsdoc2md 'assets/js/**/*.js' > docs/js-api.md",
    "docs:php": "node scripts/fetch-phpdoc.cjs && mkdir -p docs/php && php8.3 tools/phpDocumentor.phar -d src -t docs/php",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test --grep='WCAG'",
    "test:integration": "wp-env run tests-cli --env-cwd=wp-content/plugins/starmus-audio-recorder bash -c 'wp plugin activate starmus-audio-recorder && wp plugin list'",
    "test:wp-env": "npm run test:integration",
    "test": "npm run test:e2e && npm run test:a11y",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "docs": "npm run docs:php && npm run docs:js"
  },
  "author": "Starisian Technologies (Max Barrett)",
  "homepage": "https://starisian.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Starisian-Technologies/starmus-audio-recorder.git"
  },
  "keywords": [
    "wordpress",
    "audio",
    "recorder",
    "plugin",
    "starmus",
    "MediaRecorder",
    "API",
    "webm",
    "opus"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@microsoft/tsdoc": "^0.15.1",
    "@playwright/test": "^1.55.0",
    "@wordpress/env": "^10.30.0",
    "@wordpress/eslint-plugin": "^22.0.0",
    "axe-playwright": "^2.1.0",
    "bundlesize": "^0.18.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^54.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-perf-standard": "^1.0.3",
    "eslint-plugin-security": "^3.0.1",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "jsdoc-to-markdown": "^9.1.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "peaks.js": "^4.0.0"
  },
  "bundlesize": [
    {
      "path": "assets/js/**/*.js",
      "maxSize": "60kb",
      "compression": "gzip"
    },
    {
      "path": "assets/css/**/*.css",
      "maxSize": "25kb",
      "compression": "gzip"
    }
  ],
  "overrides": {
    "axios": "^1.11.0",
    "@babel/runtime": "^7.26.10"
  }
}
