{
  "name": "starmus-audio-recorder",
  "version": "0.3.1",
  "description": "Mobile-first, offline-friendly audio recorder for WordPress.",
  "type": "module",
  "main": "assets/js/starmus-audio-recorder-module.js",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md && npm run lint:php",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:js:fix": "eslint \"assets/js/**/*.js\" --fix",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:css:fix": "stylelint \"assets/css/**/*.css\" --fix",
    "lint:md": "markdownlint \"**/*.md\"",
    "lint:md:fix": "markdownlint \"**/*.md\" --fix",
    "lint:php": "vendor/bin/phpcs",
    "lint:php:fix": "vendor/bin/phpcbf",
    "format": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:md:fix && npm run lint:php:fix && prettier --write .",
    "build:hash": "node build-starmus.js",
    "build": "fs-extra copy node_modules/peaks.js/dist/peaks.min.js assets/js/vendor/peaks.min.js"
  },
  "author": "Starisian Technologies (Max Barrett)",
  "homepage": "https://starisian.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Starisian-Technologies/starmus-audio-recorder.git"
  },
  "keywords": [
    "wordpress",
    "audio",
    "recorder",
    "plugin",
    "starmus",
    "MediaRecorder",
    "API",
    "webm",
    "opus"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0"
  },
  "dependencies": {
    "peaks.js": "^3.4.2"
  }
}
