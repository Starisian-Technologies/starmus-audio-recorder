# =====================================================================
#  Starisian / Sparxstar / Starmus Unified .gitignore
#  WordPress Plugin + Composer + Node + GitHub Actions
# =====================================================================

# ---------------------------------------------------------------------
# Node dependencies & build artifacts
# ---------------------------------------------------------------------
node_modules/
# pnpm-lock.yaml  <-- Commented out to allow tracking
npm-debug.log*
yarn-debug.log*
yarn-error.log*
# Prevent npm package-lock from being tracked (we use pnpm)
package-lock.json
**/package-lock.json

dist/
build/
coverage/
.cache/
.parcel-cache/
.eslintcache
.stylelintcache

# ---------------------------------------------------------------------
# Composer dependencies
# ---------------------------------------------------------------------
vendor/
composer.lock
composer.phar

# ---------------------------------------------------------------------
# Temporary caches & analysis tools
# ---------------------------------------------------------------------
.phpunit.result.cache
.php-cs-fixer.cache
.phpstan-cache/
.phpdoc/
.phpdoc/cache/
phpdoc/
phpdoc-cache/
*.map

# ---------------------------------------------------------------------
# Logs
# ---------------------------------------------------------------------
*.log
debug.log
wp-content/debug.log

# ---------------------------------------------------------------------
# OS / IDE files
# ---------------------------------------------------------------------
.DS_Store
Thumbs.db
.vscode/
.idea/
*.swp
*.swo

# ---------------------------------------------------------------------
# Env, secrets, credentials (never commit!)
# ---------------------------------------------------------------------
.env
.env.*
auth.json
private/
secrets/

# ---------------------------------------------------------------------
# WordPress core (keep plugin clean in any WP install)
# ---------------------------------------------------------------------
wp-admin/
wp-includes/
wordpress/
wordpress-installer/
*.sql
*.sql.gz

# wp-env WordPress environment
.wp-env/
wp-content/themes/
wp-content/plugins/
wp-content/mu-plugins/

# ---------------------------------------------------------------------
# WP content paths that should never be committed
# ---------------------------------------------------------------------
wp-content/advanced-cache.php
wp-content/cache/
wp-content/uploads/
wp-content/upgrade/
wp-content/mu-plugins/
wp-content/blogs.dir/
wp-content/backups/
wp-content/backup-db/
wp-content/wp-cache-config.php

# ---------------------------------------------------------------------
# Playwright, test artifacts
# ---------------------------------------------------------------------
playwright-report/
test-results/
.playwright-cache/

# ---------------------------------------------------------------------
# Release packages
# ---------------------------------------------------------------------
*.zip
*.tar.gz
*.tgz

# ---------------------------------------------------------------------
# Ignore build-stamp or release metadata
# ---------------------------------------------------------------------
assets/build-hash.txt
assets/*.zip
assets/*.sha256
assets/*.sha1
.github-token
wp-config.php
